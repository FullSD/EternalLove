@page "/locations/view/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager
<h3>View Location</h3>
<style>
    h3 {
        color: aliceblue;

    }

    body {
        background-color: hotpink;
    }
</style>
<FormComponent location="location" Disabled="true" />
@code {
    [Parameter] public int id { get; set; }
    Location location = new Location();
    protected async override Task OnParametersSetAsync()
    {
        location = await
        _client.GetFromJsonAsync<Location>($"{Endpoints.LocationsEndpoint}/{id}");
    }
}

